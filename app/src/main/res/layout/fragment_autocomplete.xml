<!-- fragment_autocomplete.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- AutocompleteSupportFragment will be added here dynamically -->
    <FrameLayout
        android:id="@+id/autocomplete_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <!-- Add any additional views or customization here if needed -->
    </FrameLayout>

    <!-- TextView to display selected place information -->
    <TextView
        android:id="@+id/selected_place_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selected Place Info: "
        android:textSize="16sp" />

</LinearLayout>
